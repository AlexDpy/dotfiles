#!/bin/bash

composer() {
    mkdir -p ~/.composer && docker run -it --rm -u `stat -c %u $(pwd)`:`stat -c %g $(pwd)` -v $(pwd):/app -v ~/.composer:/composer -v ~/.ssh:/root/.ssh composer/composer $@
}

composer_ssh() {
    mkdir -p ~/.composer && docker run -it --rm -u `stat -c %u $(pwd)`:`stat -c %g $(pwd)` -v $(pwd):/app -v ~/.composer:/composer -v ~/.ssh:/root/.ssh -v $SSH_AUTH_SOCK:/ssh-agent --env SSH_AUTH_SOCK=/ssh-agent composer/composer $@
}

php56() {
    args=$@

    if [ $# -eq 0 ]; then
        args="-a"
    fi

    docker run -it --rm -u `stat -c %u $(pwd)`:`stat -c %g $(pwd)` -v $(pwd):/app alexdpy/php:5.6 php $args
}

php70() {
    args=$@

    if [ $# -eq 0 ]; then
        args="-a"
    fi

    docker run -it --rm -u `stat -c %u $(pwd)`:`stat -c %g $(pwd)` -v $(pwd):/app alexdpy/php:7.0 php $args
}

php71() {
    args=$@

    if [ $# -eq 0 ]; then
        args="-a"
    fi

    docker run -it --rm -u `stat -c %u $(pwd)`:`stat -c %g $(pwd)` -v $(pwd):/app alexdpy/php:7.1 php $args
}
